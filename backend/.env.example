# AgentAssist Backend Environment Variables
# Copy this file to .env and fill in your values

# App
ENVIRONMENT=development
DEBUG=True

# Security (CRITICAL)
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Generate ENCRYPTION_KEY: python -c "import os, base64; print(base64.b64encode(os.urandom(32)).decode())"
# This is used for AES-256-GCM encryption of CRM credentials
ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agentassist

# Redis (for Celery background jobs)
REDIS_URL=redis://localhost:6379/0

# AI/LLM
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEFAULT_AI_MODEL=gpt-4-turbo
VISION_MODEL=gpt-4o
SCRAPER_MODEL=gpt-3.5-turbo

# CRM OAuth Credentials
FOLLOWUPBOSS_API_KEY=
KVCORE_API_KEY=
LIONDESK_CLIENT_ID=
LIONDESK_CLIENT_SECRET=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=
BOOMTOWN_API_KEY=
BOLDTRAIL_API_KEY=

# Social Media APIs
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Skip Trace API (for The Hunter)
SKIP_TRACE_API_KEY=
SKIP_TRACE_API_URL=https://api.skiptrace.example.com

# SMS/Notifications (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Hunter Settings
HUNTER_CRON_TIME=8:00
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Team Routing
LEAD_RESPONSE_TIMEOUT_MINUTES=5
